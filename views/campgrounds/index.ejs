<%- include('../partials/header'); %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to our camp!</h1>
        <p>View our camps that we choose for you</p>
        <p>
            <a class="btn btn-primary bnt-large" href="/campgrounds/new">Create a new campground</a>
        </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our more popular camp sites</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">

    
    <% campgrounds.forEach((campground) => { %>
        <div>
            <div class="col-md-12 col-sm-12">
            <div class="thumbnail">
                <img src=" <%= campground.image %> " />            
                <div class="caption">
                    <h4> <%= campground.name %> </h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                </p> 
            </div>                                       
            </div>
        </div>

    <% }) %>
    </div> 
</div>
<%- include('../partials/footer'); %>